<AnchorPane prefHeight="480.0" prefWidth="900.0" style="-fx-background-color: #D8E2DC;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.Application.UI.BasicTrainingController">
    <children>
        <!-- Title Label -->
        <Label alignment="CENTER" layoutX="227.0" layoutY="14.0" prefHeight="58.0" prefWidth="353.0" style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #466854;" text="CW Basic Trainer" textAlignment="CENTER">
         <font>
            <Font size="23.0" />
         </font></Label>

        <!-- Play Button -->
        <Button fx:id="playButton" layoutX="58.0" layoutY="84.0" onAction="#playMorseCode" prefHeight="42.0" prefWidth="53.0" style="-fx-background-color: #466854; -fx-text-fill: white;" text="ðŸŽ§">
         <font>
            <Font size="20.0" />
         </font></Button>

        <!-- Text Input Label -->
        <Label layoutX="62.0" layoutY="142.0" style="-fx-font-size: 18px; -fx-font-family: 'Leelawadee UI Bold';" text="ENTER YOUR MORSE INTERPRETATION">
         <font>
            <Font size="14.0" />
         </font></Label>

        <!-- Text Input Field -->
        <TextField fx:id="morseInputField" layoutX="58.0" layoutY="173.0" prefHeight="73.0" prefWidth="667.0" promptText="Type what you heard" />

        <!-- Submit Button -->
        <Button fx:id="submitButton" layoutX="354.0" layoutY="387.0" onAction="#submitAnswer" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #466854; -fx-text-fill: white;" text="Submit">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
        <Label fx:id="scoreLabel" layoutX="64.0" layoutY="371.0" prefHeight="51.0" prefWidth="109.0" style="-fx-font-size: 20px; -fx-font-family: 'Leelawadee UI Bold';" text="0/0">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>

        <!-- Reset Button -->
        <Button fx:id="resetButton" layoutX="471.0" layoutY="387.0" prefHeight="35.0" prefWidth="109.0" style="-fx-background-color: #466854; -fx-text-fill: white;" text="Reset">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>

        <!-- Volume Control (Slider) -->
        <Label layoutX="755.0" layoutY="66.0" prefHeight="35.0" prefWidth="87.0" style="-fx-font-family: 'Leelawadee UI Bold'; -fx-font-size: 18;" text="VOLUME">
         <font>
            <Font size="24.0" />
         </font></Label>
        <Slider fx:id="volumeSlider" layoutX="787.0" layoutY="96.0" max="100" min="0" orientation="VERTICAL" prefHeight="309.0" prefWidth="41.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0" />
      <Label layoutX="57.0" layoutY="266.0" style="-fx-font-size: 18; -fx-font-family: 'Leelawadee UI Bold';" text="ENTER YOUR ENGLISH INTERPRETATION">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="englishInputField" layoutX="58.0" layoutY="300.0" prefHeight="73.0" prefWidth="667.0" promptText="Type what you heard" />

    </children>
