<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480" prefWidth="640" style="-fx-background-color: #D8E2DC;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.HamUIController">
<children>
    <!-- Top Label for Simulation Mode -->
    <Label layoutX="234.0" layoutY="21.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="SIMULATION MODE" textFill="#466854" />
    <Button layoutX="117.0" layoutY="186.0" onAction="#tuneDownButton" prefWidth="20" text="-" />
    <Button ellipsisString="+" layoutX="145.0" layoutY="186.0" onAction="#tuneUpButton" prefWidth="20" text="+" />

    <!-- Right-side controls -->
    <Label layoutX="34.0" layoutY="80.0" text="Range">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font></Label>

    <Label layoutX="530.0" layoutY="65.0" text="VOLUME">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font></Label>
    <TextArea fx:id="displayTextArea" layoutX="203.0" layoutY="65.0" prefHeight="232.0" prefWidth="289.0" text="&#10;&#10;" />

    <!-- Bottom Buttons -->
    <Button fx:id="returnBtn" layoutX="32.0" layoutY="325.0" onAction="#switchToWelcomeScreen" prefWidth="100" style="-fx-background-color: #466854;" text="STOP" textFill="WHITE" />
    <Button fx:id="helpBtn" layoutX="32.0" layoutY="357.0" prefWidth="100" style="-fx-background-color: #466854;" text="PLAY BACK " textFill="WHITE" />
    <Button fx:id="trainingBtn" layoutX="32.0" layoutY="387.0" prefWidth="100" text="TRAINING" />
    <Button fx:id="moreBtn" layoutX="32.0" layoutY="420.0" prefWidth="100" text="MORE" />
    <TextField layoutX="203.0" layoutY="323.0" prefHeight="110.0" prefWidth="289.0" />
      <Slider fx:id="volumeSlider" layoutX="542.0" layoutY="85.0" max="100" min="0" orientation="VERTICAL" prefHeight="202.0" prefWidth="50.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="25.0" />
      <ComboBox fx:id="bandComboBox" layoutX="93.0" layoutY="100.0" prefHeight="25.0" prefWidth="100.0" />
      <Label layoutX="128.0" layoutY="80.0" text="Band">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="123.0" layoutY="163.0" text="Tuning">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font>
      </Label>
      <Button layoutX="517.0" layoutY="352.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #466854;" text="DOT" textFill="WHITE" />
      <Button layoutX="517.0" layoutY="390.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #466854;" text="DASH" textFill="WHITE" />
      <Button layoutX="32.0" layoutY="291.0" onAction="#startButton" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #466854;" text="START" textFill="WHITE" />
      <RadioButton layoutX="524.0" layoutY="424.0" mnemonicParsing="false" text="Push to Talk" />
      <Button layoutX="517.0" layoutY="307.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #466850;" text="SPACE" textFill="WHITE" />
      <ComboBox fx:id="rangeComboBox" layoutX="12.0" layoutY="100.0" prefHeight="25.0" prefWidth="77.0" />

</children>

</AnchorPane>
