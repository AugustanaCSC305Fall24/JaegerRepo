<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480" prefWidth="640" style="-fx-background-color: #D8E2DC;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.HamUIController">
<children>
    <!-- Top Label for Simulation Mode -->
    <Label layoutX="234.0" layoutY="21.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="SIMULATION MODE" textFill="#466854" />
    <Button layoutX="117.0" layoutY="154.0" onAction="#tuneDownButton" prefWidth="20" text="-" />
    <Button ellipsisString="+" layoutX="145.0" layoutY="154.0" onAction="#tuneUpButton" prefWidth="20" text="+" />

    <!-- Right-side controls -->
    <Label layoutX="34.0" layoutY="80.0" text="Range">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font></Label>

    <Label layoutX="530.0" layoutY="65.0" text="VOLUME">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font></Label>
    <TextArea fx:id="displayTextArea" layoutX="203.0" layoutY="65.0" prefHeight="232.0" prefWidth="289.0" text="Please choose your Range and Band. &#10;Hit &quot;Start&quot; to connect to server. Enjoy!  &#10;&#10;" />

    <!-- Bottom Buttons -->
    <Button fx:id="returnBtn" layoutX="32.0" layoutY="325.0" onAction="#switchToWelcomeScreen" prefWidth="100" style="-fx-background-color: #466854;" text="STOP" textFill="WHITE" />
    <Button fx:id="helpBtn" layoutX="32.0" layoutY="357.0" onAction="#playBackAction" prefWidth="100" style="-fx-background-color: #466854;" text="PLAY RECEIVED " textFill="WHITE">
         <font>
            <Font size="11.5" />
         </font></Button>
    <Button fx:id="morseToTextButton" layoutX="32.0" layoutY="387.0" onAction="#morseToTextAction" prefWidth="100" text="MORSE &gt; TEXT" />
    <Button fx:id="textToMorseButton" layoutX="32.0" layoutY="420.0" onAction="#textToMorseAction" prefWidth="100" text="TEXT &gt; MORSE" />
    <TextField fx:id="translateTextField" alignment="TOP_LEFT" layoutX="203.0" layoutY="323.0" prefHeight="110.0" prefWidth="289.0" promptText="You can get important message here." />
      <Slider fx:id="volumeSlider" layoutX="542.0" layoutY="85.0" max="100" min="0" onMouseReleased="#volumeSliderAction" orientation="VERTICAL" prefHeight="202.0" prefWidth="50.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="25.0" />
      <ComboBox fx:id="bandComboBox" layoutX="93.0" layoutY="100.0" prefHeight="25.0" prefWidth="100.0" />
      <Label layoutX="128.0" layoutY="80.0" text="Band">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="120.0" layoutY="137.0" text="Tuning R">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font>
      </Label>
      <Button fx:id="dotButton" layoutX="517.0" layoutY="352.0" mnemonicParsing="false" onAction="#dotAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #466854;" text="DOT" textFill="WHITE" />
      <Button fx:id="dashButton" layoutX="517.0" layoutY="390.0" mnemonicParsing="false" onAction="#dashAction" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #466854;" text="DASH" textFill="WHITE" />
      <Button layoutX="32.0" layoutY="291.0" onAction="#startButton" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #466854;" text="START" textFill="WHITE" />
      <RadioButton layoutX="524.0" layoutY="424.0" mnemonicParsing="false" text="Push to Talk" />
      <Button layoutX="517.0" layoutY="325.0" mnemonicParsing="false" onAction="#spaceAction" prefHeight="17.0" prefWidth="100.0" style="-fx-background-color: #466850;" text="SPACE" textFill="WHITE" />
      <ComboBox fx:id="rangeComboBox" layoutX="12.0" layoutY="100.0" onAction="#selectRangeAction" prefHeight="25.0" prefWidth="77.0" />
      <Button layoutX="517.0" layoutY="297.0" mnemonicParsing="false" onAction="#splashAction" prefHeight="17.0" prefWidth="100.0" style="-fx-background-color: #466850;" text="/" textFill="WHITE" />
      <Label layoutX="32.0" layoutY="137.0" text="Filtering">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font>
      </Label>
      <Button layoutX="26.0" layoutY="154.0" prefWidth="20" text="-" />
      <Button ellipsisString="+" layoutX="54.0" layoutY="154.0" prefWidth="20" text="+" />
      <Label layoutX="13.0" layoutY="196.0" text="Playback Speed">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font>
      </Label>
      <Button fx:id="speedDownButton" layoutX="29.0" layoutY="214.0" onAction="#speedDownAction" prefWidth="20" text="-" />
      <Button fx:id="speedUpButton" ellipsisString="+" layoutX="57.0" layoutY="214.0" onAction="#speedUpAction" prefWidth="20" text="+" />
      <Label layoutX="120.0" layoutY="196.0" text="Tuning T">
         <font>
            <Font name="Leelawadee UI Bold" size="12.0" />
         </font>
      </Label>
      <Button layoutX="117.0" layoutY="214.0" onAction="#tuneTDownButton" prefWidth="20" text="-" />
      <Button ellipsisString="+" layoutX="145.0" layoutY="214.0" onAction="#tuneTUpButton" prefWidth="20" text="+" />

</children>

</AnchorPane>
